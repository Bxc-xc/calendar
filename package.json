{
  "name": "desktop-calendar",
  "version": "1.0.0",
  "description": "桌面日历小插件 - 轻量、美观、可自定义的桌面日历",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "dist": "npm run build && electron-builder",
    "pack": "electron-builder --dir",
    "build:full": "node scripts/build.js",
    "dev:full": "node scripts/dev.js",
    "generate-icons": "node scripts/generate-icons.js",
    "clean": "rimraf dist node_modules/.cache",
    "postinstall": "npm run generate-icons"
  },
  "keywords": [
    "calendar",
    "desktop",
    "electron",
    "productivity"
  ],
  "author": "Calendar Developer",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "rimraf": "^5.0.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.calendar.desktop",
    "productName": "桌面日历",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/**/*",
      "assets/**/*",
      "config/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png"
    }
  }
}
